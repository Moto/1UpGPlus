
{ "name" : "Blip.Fm + GMail Extension"

, "version" : "0.2"
, "description" : 

  "Blip.Fm + GMail tweaks: extract list of top fans and new listeners from \"Weekly Update\" email in GMail, and add links to reblip from pages were a reblip would stop a song."

, "options_page" : "options.html"

, "permissions": 
	[ "tabs"
	, "https://mail.google.com/*"
	, "http://blip.fm/*"
	]

, "icons" : 
	{ "48"  : "icon-48.png"
	, "128" : "icon-128.png"
  }

, "background_page" : "background.html"

, "page_action" : 
	{ "default_title": "Blip.Fm Activity Email Utilities"
	, "default_icon": "icon-48.png"
	, "default_popup": "popup.html"
  }

, "content_scripts" : 
	[ { "matches" : 
		[ "https://mail.google.com/mail/*"
		, "http://blip.fm/*"
		]
    , "js" : 
				[ "jquery-1.4.1.min.js"
				, "jquery-ui-1.8.5.custom.min.js"
				, "jquery-watch-plugin-1.2.0.js"
				, "options.js"
				, "blip_cs_acty.js"
				]
		, "css" : [ "jquery-ui-1.8.5.custom.css" ]
    }
  ]
}
